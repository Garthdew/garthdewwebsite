            text-align: center;
            padding: 20px;
        }

        .info h1, .info p {
            margin: 0;
            padding: 0;
        }

        #playButton {
            background-color: rgba(255, 255, 255, 0.8);
            border: none;
            color: black;
            padding: 15px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 16px;
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin: 20px auto;
        }
    </style>
